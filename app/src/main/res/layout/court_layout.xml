<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ib_center_reverse"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/reverse_side"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/layout_court"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="44">

        <!-- ..................... LEFT COURT LAYOUT.................. -->
        <LinearLayout
            android:id="@+id/left_court"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="22"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="22">

            <RelativeLayout
                android:id="@+id/left_third_court"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="6"
                android:background="@drawable/button_selector"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_left_point_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="7"
                android:background="@color/courtColor">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/left_second_court"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:weightSum="20">

                        <RelativeLayout
                            android:id="@+id/left_odd_court"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="10"
                            android:background="@color/courtColor"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_left_court_left_player"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:hint="Enter Player Name"
                                android:inputType="textCapWords"
                                android:nextFocusForward="@+id/et_left_court_right_player"
                                android:textColor="@android:color/white"
                                android:textColorHint="@android:color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/left_even_court"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:background="@color/courtColor"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_left_court_right_player"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:hint="Enter Player Name"
                                android:inputType="textCapWords"
                                android:nextFocusForward="@+id/et_right_court_right_player"
                                android:textColor="@android:color/white"
                                android:textColorHint="@android:color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ib_left_reverse"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/reverse_up" />
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/left_first_court"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@color/courtColor"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_left_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <!-- ..................... RIGHT COURT LAYOUT.................. -->

        <LinearLayout
            android:id="@+id/right_court"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="22"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="22">

            <RelativeLayout
                android:id="@+id/right_first_court"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="9"
                android:background="@color/courtColor"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_right_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="7"
                android:background="@color/courtColor">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/right_second_court"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:weightSum="20">

                        <RelativeLayout
                            android:id="@+id/right_even_court"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="10"
                            android:background="@color/courtColor"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_right_court_right_player"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:hint="Enter Player Name"
                                android:inputType="textCapWords"
                                android:nextFocusForward="@+id/et_right_court_left_player"
                                android:textColor="@android:color/white"
                                android:textColorHint="@android:color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/right_odd_court"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:background="@color/courtColor"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_right_court_left_player"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:hint="Enter Player Name"
                                android:imeOptions="actionDone"
                                android:inputType="textCapWords"
                                android:textColor="@android:color/white"
                                android:textColorHint="@android:color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ib_right_reverse"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/reverse_up" />
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/right_third_court"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/button_selector"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_right_point_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>